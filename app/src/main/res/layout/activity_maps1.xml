<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btn_buscar_min"
        android:layout_width="45dp"
        android:layout_height="56dp"
        android:layout_gravity="right|top"
        android:layout_marginTop="618dp"
        android:padding="10dp"
        android:paddingRight="10dp"
        map:backgroundTint="@color/chadecat"
        map:icon="@drawable/ic_baseline_share_location_24"
        map:iconGravity="textTop"
        map:iconPadding="1dp"
        map:iconSize="35dp" />

    <fragment
        android:id="@+id/mapa"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" />

    <Button
        android:id="@+id/btn_msg"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="625dp"
        android:visibility="invisible"
        map:backgroundTint="@color/chadecat"
        map:icon="@drawable/ic_baseline_message_24" />

    <Button
        android:id="@+id/btn_ruta"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="575dp"
        android:visibility="invisible"
        map:backgroundTint="@color/chadecat"
        map:icon="@drawable/ic_baseline_map_24" />

    <Button
        android:id="@+id/btn_reservar"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="525dp"
        android:visibility="invisible"
        map:backgroundTint="@color/chadecat"
        map:icon="@drawable/ic_baseline_book_online_24" />

</FrameLayout>